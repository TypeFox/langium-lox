{
  "name": "lox",
  "scopeName": "source.lox",
  "fileTypes": [
    ".lox"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.lox",
      "match": "\\b(and|boolean|class|else|false|for|fun|if|new|nil|number|or|print|return|string|super|this|true|var|void|while)\\b"
    },
    {
      "name": "string.quoted.double.lox",
      "begin": "\"",
      "end": "\""
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.lox",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.lox"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.lox"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.lox"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.lox"
        }
      ]
    }
  }
}