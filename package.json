{
    "name": "langium-lox",
    "displayName": "langium-lox",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lox",
                "aliases": [
                    "Lox",
                    "lox"
                ],
                "extensions": [
                    ".lox"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lox",
                "scopeName": "source.lox",
                "path": "./syntaxes/lox.tmLanguage.json"
            }
        ],
        "notebooks": [
            {
                "type": "lox-notebook",
                "displayName": "Lox Notebook",
                "selector": [
                    {
                        "filenamePattern": "*.loxnb"
                    }
                ]
            }
        ]
    },
    "activationEvents": [
        "onLanguage:lox"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "lox-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "compile": "tsc -b tsconfig.json",
        "build": "npm run clean && npm run langium:generate && npm run compile",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "clean": "shx rm -rf out",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "colors": "~1.4.0",
        "commander": "~11.1.0",
        "langium": "~2.1.3",
        "uuid": "~9.0.1",
        "vscode-languageclient": "~9.0.1"
    },
    "devDependencies": {
        "@types/node": "~20.11.3",
        "@types/uuid": "~9.0.7",
        "@types/vscode": "~1.85.0",
        "@typescript-eslint/eslint-plugin": "~6.19.0",
        "@typescript-eslint/parser": "~6.19.0",
        "eslint": "~8.56.0",
        "langium-cli": "~2.1.0",
        "shx": "~0.3.4",
        "typescript": "~5.3.3",
        "vitest": "~1.2.0"
    },
    "volta": {
        "node": "20.11.0",
        "npm": "10.2.4"
    }
}
